<idea-plugin>
  <id>org.jetbrains.projector-plugin</id>
  <name>Projector</name>
  <vendor email="support@jetbrains.org" url="https://www.jetbrains.org">JetBrains</vendor>

  <description><![CDATA[
    Projector
    ]]></description>

  <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
       on how to target different products -->
  <depends>com.intellij.modules.platform</depends>

  <extensions defaultExtensionNs="com.intellij">
    <applicationService serviceImplementation="ProjectorService"/>
    <postStartupActivity implementation="RegisterPluginInstallerStateListener"/>
  </extensions>

  <actions>
    <group id="projector.menu" text="Projector" description="Projector menu">
      <add-to-group group-id="MainMenu" anchor="last"/>
      <action id="projector.enable" class="EnableAction" text="Enable Remote Access to IDE" description="Enable projector"/>
      <action id="projector.disable" class="DisableAction" text="Disable Remote Access to IDE" description="Disable projector"/>
      <action id="projector.copy" class="CopyUrlAction" text="Copy URL" description="Copy client url"/>
    </group>
  </actions>
</idea-plugin>
